{
  "_comment": "PII detection patterns for sanitization and validation",
  "patterns": {
    "mac_address": {
      "regex": "\\b([0-9A-Fa-f]{2}[:-]){5}[0-9A-Fa-f]{2}\\b",
      "replacement_prefix": "MAC",
      "description": "MAC addresses in colon or dash format"
    },
    "serial_number": {
      "regex": "(Serial\\s*Number|SerialNum|SN|S/N)\\s*[:\\s=]*(?:<[^>]*>)*\\s*([a-zA-Z0-9\\-]{5,})",
      "replacement_prefix": "SERIAL",
      "flags": ["IGNORECASE"],
      "description": "Device serial numbers with various label formats"
    },
    "account_id": {
      "regex": "(Account|Subscriber|Customer|Device)\\s*(ID|Number)\\s*[:\\s=]+\\S+",
      "replacement_prefix": "ACCOUNT",
      "flags": ["IGNORECASE"],
      "description": "Account, subscriber, or customer IDs"
    },
    "private_ip": {
      "regex": "\\b(?!192\\.168\\.100\\.1\\b)(?!192\\.168\\.0\\.1\\b)(?!192\\.168\\.1\\.1\\b)(?!10\\.0\\.0\\.1\\b)(?:10\\.|172\\.(?:1[6-9]|2[0-9]|3[01])\\.|192\\.168\\.)\\d{1,3}\\.\\d{1,3}\\b",
      "replacement_prefix": "PRIV_IP",
      "description": "Private IP addresses (preserves common gateway IPs)"
    },
    "public_ip": {
      "regex": "\\b(?!10\\.)(?!172\\.(?:1[6-9]|2[0-9]|3[01])\\.)(?!192\\.168\\.)(?!127\\.)(?!0\\.)(?!255\\.)(?:[1-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\b",
      "replacement_prefix": "PUB_IP",
      "description": "Public IP addresses"
    },
    "ipv6": {
      "regex": "\\b([0-9a-f]{0,4}:){2,7}[0-9a-f]{0,4}\\b",
      "replacement_prefix": "IPV6",
      "flags": ["IGNORECASE"],
      "require_hex_letter": true,
      "description": "IPv6 addresses (requires hex letter to avoid time formats)"
    },
    "email": {
      "regex": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9](?:[A-Za-z0-9-]*[A-Za-z0-9])?(?:\\.[A-Za-z0-9](?:[A-Za-z0-9-]*[A-Za-z0-9])?)*\\.[A-Za-z]{2,}\\b",
      "replacement_prefix": "EMAIL",
      "description": "Email addresses (RFC 5321 simplified)"
    },
    "password_field": {
      "regex": "(password|passphrase|psk|key|wpa[0-9]*key)\\s*[=:]\\s*[\"']?([^\"'<>\\s]+)",
      "replacement_prefix": "PASS",
      "flags": ["IGNORECASE"],
      "description": "Password fields in HTML/text"
    },
    "password_input": {
      "regex": "(<input[^>]*type=[\"']?password[\"']?[^>]*value=[\"']?)([^\"']+)([\"']?)",
      "replacement_prefix": "PASS",
      "flags": ["IGNORECASE"],
      "description": "Password input field values"
    },
    "session_token": {
      "regex": "(session|token|auth|cookie)\\s*[=:]\\s*[\"']?([^\"'<>\\s]{20,})",
      "replacement_prefix": "TOKEN",
      "flags": ["IGNORECASE"],
      "description": "Session tokens and auth cookies"
    },
    "csrf_token": {
      "regex": "(<meta[^>]*name=[\"']?csrf-token[\"']?[^>]*content=[\"']?)([^\"']+)([\"']?)",
      "replacement_prefix": "CSRF",
      "flags": ["IGNORECASE"],
      "description": "CSRF tokens in meta tags"
    },
    "config_path": {
      "regex": "(Config\\s*File\\s*Name|config\\s*file)\\s*[:\\s=]+([^\\s<>]+\\.cfg)",
      "replacement_prefix": "CONFIG",
      "flags": ["IGNORECASE"],
      "description": "Configuration file paths"
    },
    "motorola_password": {
      "regex": "(var\\s+Current(?:Pw|Password)[A-Za-z]*\\s*=\\s*['\"])([^'\"]+)(['\"])",
      "replacement_prefix": "PASS",
      "flags": ["IGNORECASE"],
      "description": "Motorola JavaScript password variables"
    }
  },
  "preserved_gateway_ips": [
    "192.168.100.1",
    "192.168.0.1",
    "192.168.1.1",
    "10.0.0.1"
  ]
}
